<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/latesthappenings.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
</head>
<body>
    
    <div class="latesthappenings">

        <div class="box1">

            <div class="boxcontent">

                <h2> Latest Happenings </h2>
                <a href="#">View All Activites <i class="fa-solid fa-arrow-right-long"> </i></a>

            </div>

        </div>

        <div class="box2 myswiper">

            <div class="swipper-event-card swiper-wrapper">

                <% eventsImage.forEach((eventimg) => { %>

                    <div class="event-card-box swiper-slide">

                        <div class="event-card-image">

                            <img src="<%= eventimg.image %>" alt="">

                        </div>

                        <div class="event-card-content">

                            <h4><%= eventimg.title %></h4>

                        </div>

                    </div>

                <% }) %>
                
            </div>

        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="/js/latesthappenings.js"></script>

</body>
</html>